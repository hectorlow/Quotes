<h3>Edit Quote</h3>

<div>
  <form action="/quotes/{{quote._id}}" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" name="author" id="authhor" value={{quote.author}}>
        <label for="author">Author</label>
      </div>
    </div>

    <div class="row">
      <div class="input-field">
        <select name="status" id="status">
          {{#select quote.status}}
          <option value="public" selected>public</option>
          <option value="private">private</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>

    <h5>Inspiring Quote</h5>
    <textarea name="quote" id="quote">{{quote.quote}}</textarea>

    <br>
    <input type="submit" value="Save" class="btn orange">
    <a href="/quotes" class="btn">Cancel</a>
  </form>
</div>