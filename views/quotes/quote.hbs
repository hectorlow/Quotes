<div class="row">
  <div class="col s12 m8">
    <h3>
      Quote
    </h3>
    <div class="card">
      <div class="card-content">
        <div class="float-right fa-large">{{{editIcon quote.user user quote._id false}}}</div>
        <h5>{{stripTags quote.quote}}</h5>
        <span>{{formatDate quote.createdAt 'MMMM Do YY'}}</span>

      </div>
    </div>
  </div>
  <div class="col s12 m4">
    <div class="section">
      <div class="card center-align">
        <div class="card-content">
          <span class="card-title">{{quote.user.displayName}}</span>
          <img src={{quote.user.image}} alt="" class="circle">
        </div>
        <div class="card-action">
          <a href="/quotes/user/{{quote.user._id}}">More from {{quote.user.firstName}}</a>
        </div>
      </div>
    </div>
  </div>
</div>