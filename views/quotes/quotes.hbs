<h3>Quotes</h3>

<div class="row">
  {{#each quotes}}
    <div class="col s12 m4">
      <div class="card">
        <div class="card-image">
          <h3>{{{editIcon user ../user _id}}}</h3>
        </div>
        <div class="card-content center-align">
          <h5>{{truncateString (stripTags quote) 150}}</h5>
          {{!-- <h5>{{stripTags quote}}</h5> --}}
          <p>- {{author}}</p>
          <br>
          <div class="chip">
            <img src={{user.image}} alt="">
            <a href="/quotes/user/{{user._id}}">{{user.displayName}}</a>
          </div>
        </div>

        <div class="card-content center-align">
          <a href="/quotes/{{_id}}">Read more</a>
        </div>
      </div>
    </div>

  {{/each}}
</div>